constant tapeSize: i32 = 45;

inline tape(statement: String) -> String {
    return " " * round((tapeSize - size(statement)) / 2) + statement + "\n" + "-" * tapeSize;
}

inline printTape(statement: String) => println("\n" + tape(statement));


